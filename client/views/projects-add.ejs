<!DOCTYPE html>
<html lang="en">
<%- include ('partials/header') %>
<body>
  <div class="container">
    <%- include ('partials/nav') %>
    <h1 class="text-center">Add Project Form</h2>
    <div class="row d-flex flex-direction-column align-items-center justify-content-center">
      <div class="col-md-6">
      <form action="/projects-add" method="post">
          <div class="form-group">
          <input value="<%= user._id %>" class="form-control" id="projectOwnerID" type="text" name="projectOwnerID" hidden />

          <label for="project_name">Enter project's name: </label>
            <input class="form-control" id="project_name" type="text" name="projectName" />
          </div>

          <div class="form-group">
            <label for="projectDescription">Enter project's description: </label>
            <input class="form-control" id="project_description" type="text" name="projectDescription" />
          </div>

          <div class="form-group">
            <label for="project_location">Enter project's location: </label>
            <input class="form-control" id="project_location" type="text" name="projectLocation" />
          </div>

          <div class="form-group">
            <label for="project_startDate">Enter project's start date: </label>
            <input class="form-control" id="project_startDate" type="date" name="projectStartDate" required />
          </div>

          <div class="form-group">
            <label for="project_endDate">Enter project's end date: </label>
            <input class="form-control" id="project_endDate" type="date" name="projectEndDate" required/>
          </div>
          <div class="row mt-3">
          <button type="submit" class="btn btn-primary">Submit</button>
        </div>
        </form>
      </div>
    </div>
  </div>

    <%- include ('partials/footer') %>
  </body>

</html>