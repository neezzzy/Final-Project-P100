<!DOCTYPE html>
<html lang="en">
<%- include ('partials/header') %>

  <body>
    <div class="container">
      <%- include ('partials/nav') %>
        <h1>Profile</h1>
        <div class="container rounded bg-white mt-5 mb-5">
          <div class="row">
              <div class="col-md-3">
                  <div class="d-flex flex-column align-items-center text-center p-3 py-5">
                    <img class="img-fluid rounded mt-5" src="<%= user.image %>">
                    <span class="font-weight-bold"><%= user.userType %></span>
                    <span class="font-weight-bold"><%= user.name %></span>
                    <span class="text-black-50"><%= user.email %></span>
                  </div>
              </div>
              <div class="col-md-6">
                  <div class="p-3 py-5">
                      <div class="row mt-2">
                        <div class="col-md-12"><label class="labels fw-bold">Name</label><input type="text"
                            class="form-control form-control-plaintext" value="<%= user.name %>" readonly></div>
                        </div>
                        <div class="row mt-3">
                          <div class="col-md-12"><label class="labels fw-bold">Email</label><input type="email"
                              class="form-control form-control-plaintext" value="<%= user.email %>" readonly></div>
                        </div>
                        <div class="row mt-3">
                          <div class="col-md-12"><label class="labels fw-bold">Country</label><input type="text"
                              class="form-control form-control-plaintext" value="<%= user.country %>" readonly></div>
                        </div>
                        <div class="row mt-3">
                          <div class="col-md-12"><label class="labels fw-bold">Image URL</label><input type="text"
                              class="form-control form-control-plaintext" value="<%= user.image %>" readonly></div>
                        </div>
                      <div class="row mt-5">
                        <a class="btn btn-primary" href="/profile-edit/<%=user.id%>">Edit Profile</a>
                      </div>
                  </div>
              </div>
          </div>
        </div>
    </div>
    <%- include ('partials/footer') %>
  </body>

</html>