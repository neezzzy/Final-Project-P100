<!DOCTYPE html>
<html lang="en">
<%- include ('../partials/header') %>
	<body>
			<div class="container">
				<%- include ('nav') %>
                <a href="/admin/create-user/student" class="btn btn-success">Create Student</a>
                <a href="/admin/create-user/company" class="btn btn-success">Create Company</a>
				<!-- TODO Add Confirmation -->
                <a href="/admin/delete-all-users/" class="btn btn-danger">Delete All Users</a>
				
				<table class="table table-striped">	
					<thead>
							<tr>
								<th scope="col">#</th>
								<th scope="col">userType</th>
								<th scope="col">Name</th>
								<th scope="col">email</th>
								<th scope="col">Country</th>
								<th scope="col">Image</th>
								<!-- TODO Add Confirmation -->
								<th scope="col"><a href="/admin/delete-all-users/" class="text-decoration-none">‚ùå</a></th>
							</tr>
						</thead>
						<tbody>
							<% users.forEach(user => { %>
								<tr>
									<td><%= user._id %></td>
									<td><%= user.userType %></td>
									<td><%= user.name %></td>
									<td><%= user.email %></td>
									<td><%= user.country %></td>
									<td><img src="<%= user.image %>" width="100" title="<%= user.image %>" alt="<%= user.image %>"></td>
									<td><a href="/admin/delete-user/<%= user._id %>" class="btn btn-danger">X</a></td>
								</tr>
							<% }) %>
					</tbody>
				</table>
            </div>
			<%- include ('../partials/footer') %>
	</body>
</html>